    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst results = [];\n\nfor (const item of items) {\n  let messageText = '';\n  let platform = '';\n  let senderId = '';\n  let chatId = '';\n  let messageId = '';\n  \n  // WhatsApp\n  if (item.json.messages) {\n    messageText = item.json.messages[0]?.text?.body || '';\n    platform = 'whatsapp';\n    senderId = item.json.messages[0]?.from || '';\n  }\n  // Telegram\n  else if (item.json.message) {\n    messageText = item.json.message?.text || '';\n    platform = 'telegram';\n    chatId = item.json.message?.chat?.id || '';\n    messageId = item.json.message?.message_id || '';\n  }\n  // Gmail\n  else if (item.json.snippet) {\n    messageText = item.json.snippet || item.json.textPlain || '';\n    platform = 'gmail';\n    senderId = item.json.from || '';\n    messageId = item.json.id || '';\n  }\n  \n  // Extract URL from message\n  const urlRegex = /(https?:\\/\\/[^\\s]+)/g;\n  const urls = messageText.match(urlRegex);\n  const articleUrl = urls ? urls[0] : '';\n  \n  results.push({\n    json: {\n      ...item.json,\n      articleUrl,\n      platform,\n      senderId,\n      chatId,\n      messageId,\n      originalMessage: messageText\n    }\n  });\n}\n\nreturn results;"
      },
