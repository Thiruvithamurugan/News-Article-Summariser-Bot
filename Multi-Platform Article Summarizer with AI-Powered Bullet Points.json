      "id": "94db50ce-44b1-4392-b8e8-499c223e406f",
      "name": "Extract Clean Text",
      "type": "n8n-nodes-base.html",
      "typeVersion": 1.2,
      "position": [
        864,
        800
      ]
    },
    {
      "parameters": {
        "jsCode": "const items = $input.all();\nconst results = [];\nconst maxChunkSize = $('Workflow Configuration').first().json.maxChunkSize;\n\nfor (const item of items) {\n  let text = '';\n  \n  // Extract text from HTML extraction result\n  if (Array.isArray(item.json)) {\n    text = item.json.map(el => el.text || '').join(' ');\n  } else if (item.json.text) {\n    text = item.json.text;\n  } else if (typeof item.json === 'string') {\n    text = item.json;\n  }\n  \n  // Clean up text\n  text = text.replace(/\\s+/g, ' ').trim();\n  \n  // If text is short enough, return as single item\n  if (text.length <= maxChunkSize) {\n    results.push({\n      json: {\n        ...item.json,\n        textChunk: text,\n        chunkIndex: 0,\n        totalChunks: 1\n      }\n    });\n  } else {\n    // Split into chunks\n    const chunks = [];\n    let currentChunk = '';\n    const sentences = text.match(/[^.!?]+[.!?]+/g) || [text];\n    \n    for (const sentence of sentences) {\n      if ((currentChunk + sentence).length <= maxChunkSize) {\n        currentChunk += sentence;\n      } else {\n        if (currentChunk) chunks.push(currentChunk.trim());\n        currentChunk = sentence;\n      }\n    }\n    if (currentChunk) chunks.push(currentChunk.trim());\n    \n    // Create items for each chunk\n    chunks.forEach((chunk, index) => {\n      results.push({\n        json: {\n          ...item.json,\n          textChunk: chunk,\n          chunkIndex: index,\n          totalChunks: chunks.length\n        }\n      });\n    });\n  }\n}\n\nreturn results;"
      },
